{
  "manifest_version": 3,
  "name": "UbiCast Downloader",
  "version": "1.0",

  "description": "Finds direct URLs to UbiCast videos and audios",

  "icons": {
    "96" : "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "webRequest"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "downloader.js"
  },

  "action": {
    "default_icon": "icons/icon-96.png",
    "default_title": "UbiCast Downloader",
    "default_popup": "menu/downloader_popup.html"
  }
}
